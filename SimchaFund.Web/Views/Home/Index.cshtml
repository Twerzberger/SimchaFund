

<div class="row">
    <div class="header">
        <h1>Simchas</h1>
    </div>
    <div class="row header">
        <div class="col-md-4">
            <button class="btn btn-danger" id="new-simcha">New simcha</button>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <tr>
            <th>Donors</th>
            <th>Simcha Name</th>
            <th>Simcha Date</th>
            <th>Donors Count</th>
            <th>Total</th>
        </tr>
    </table>
</div>

<div class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">New Simcha</h4>
            </div>
            <div class="modal-body">
                <form method="POST" action="/home/newsimcha">
                    <div class="form-group">
                        <label>Simcha Name</label>
                        <input class="form-control" name="simchaName" placeholder="Simcha Name" type="text">
                    </div>
                    <div class="form-group">
                        <label>Date</label>
                        <input type="date" name="simchaDate" class="form-control" id="datepicker">
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <button class="btn btn-primary" name="commit">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script src="~/js/newsimcha.js"></script>
}